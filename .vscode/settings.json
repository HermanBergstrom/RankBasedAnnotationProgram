  "editor.formatOnSave": true,
  "python.formatting.blackArgs": ["--line-length", "79"],
  "python.formatting.autopep8Args": [
    "--max-line-length",
    "79",
    "--experimental"
  ],
  "editor.rulers": [88]
}
